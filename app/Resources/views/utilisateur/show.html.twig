{% extends 'base.html.twig' %}

{% block body %}
    <h1>Information utilisateur</h1>
    <br/>
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ utilisateur.username }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ utilisateur.mail }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ utilisateur.role.role }}</td>
            </tr>
        </tbody>
    </table>


            <a href="{{ path('utilisateur_index') }}" class="btn btn-outline-info">Revenir</a>

            <a href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}" class="btn btn-outline-success">Modifier</a>
            <br/>
            <br/>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}

{% endblock %}
